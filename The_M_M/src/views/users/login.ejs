<%- include('../partials/head.ejs', {cssSheet: "styles.css", title: "Login"}) %>
<%- include('../partials/header.ejs') %>

<main>
    <div class="formulario-registro">
        
        <form action="/users/login" method="POST">
            <h2>Inicio de sesion</h2>
            
            <div class="item-formulario">
                
            <div class="item-formulario">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
                <% if (locals.errors && errors.email) { %>
                    <div class="text-danger">
                        <%= errors.email.msg %>
                    </div>
                    <% } %>
            </div>
            <div class="item-formulario">
                <label for="password">Contraseña</label>
                <input type="password" id="contraseña" name="password" minlength= "5" required >
            </div>

            <div class="checkbox-login">
                RECORDARME:<input type="checkbox" name="checkbox" class="rememberUser">
            </div>
           
            <button class="boton-registro" type="submit">Inicio</button>

            <div>
                <a href="/users/register" class="link-registrate">Sos nuevo? Registrate</a>
            </div>
            <div>
                <a href="/users/adminLogin" class="link-registrate">Ingresa como Administrador</a>
            </div>
        </form>
    </div>
  </main>

  <%- include('../partials/footer.ejs') %>