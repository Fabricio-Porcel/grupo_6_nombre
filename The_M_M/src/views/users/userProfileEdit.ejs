<%- include('../partials/head.ejs', {cssSheet: "styles.css", title: "Login"}) %>
<%- include('../partials/header.ejs') %>

<body>
   
        <form action="/users/profileEdit/<%= users.id %>?_method=PUT" method="POST" class="edit-form">
            <div class="title-form">
                <h1>Modificar Usuario</h1>
            </div>
            <div class="form-desktop">
            <div class="control-form">
                <label for="name">Nombre:</label>
                <input type="text" id="name" name="name" class="control" value="<%= users.name %>">
            </div>
            <div class="control-form">
                <label for="lastName">Apellido:</label>
                <input type="text" id="lastName" name="lastName" class="control"value="<%= users.lastName %>">
            </div>
            <div class="control-form">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" class="control" value="<%= users.email %>">
            </div>
            <div class="control-form">
                <label for="phoneNumber">Telefono:</label>
                <input type="tel" name="phoneNumber" class="control" value="<%= users.phoneNumber %>">
            </div>
            <div class="control-form">
                <label for="country">Pais:</label>
                <input type="text" name="country" class="control" value="<%= users.country %>">
            </div>
            <div class="control-form">
                <label for="city">Ciudad:</label>
                <input type="text" name="city" class="control" value="<%= users.city %>">
            </div>
            <div class="control-form">
                <label for="avatar">Imagen de pefil:</label>
                <input type="file" name="avatar" class="control" value="<%= users.avatar %>">
            </div>
     
            <button type="reset" class="button-form">Eliminar Todos</button>
            <button type="submit" class="button-form">Modificar</button>
            </div>
        </form>

</body>
<%- include('../partials/footer.ejs') %>